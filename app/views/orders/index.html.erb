<p id="notice"><%= notice %></p>

<h1>Pagos realizados</h1>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="success">Nombre</th>
      <th class="success">Direccion</th>
      <th class="success">Correo electronico</th>
      <th class="success">Tipo de pago</th>
      <th colspan="3" class="success"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="danger"><%= order.name %></td>
        <td class="danger"><%= order.address %></td>
        <td class="danger"><%= order.email %></td>
        <td class="danger"><%= order.pay_type %></td>
        <td class="danger"><%= link_to 'Show', order,class:'btn btn-info' %></td>
        <td class="danger"><%= link_to 'Edit', edit_order_path(order),class:'btn btn-info' %></td>
        <td class="danger"><%= link_to 'Destroy', order, method: :delete,class:'btn btn-info'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Order', new_order_path,class:'btn btn-success'%>
<p><%= paginate @orders %></p>
