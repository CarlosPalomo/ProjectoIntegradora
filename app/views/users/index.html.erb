<p id="notice"><%= notice %></p>

<h1>Usuario</h1>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="success">Nombre</th>
      <th colspan="3" class="success"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="danger"><%= user.name %></td>
        <td class="danger"><%= link_to 'Show', user,class:'btn btn-info' %></td>
        <td class="danger"><%= link_to 'Edit', edit_user_path(user),class:'btn btn-info' %></td>
        <td class="danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo usuario', new_user_path,class:'btn btn-success' %>
